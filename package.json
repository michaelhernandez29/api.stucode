{
  "name": "api.stucode",
  "version": "1.0.0",
  "description": "Este repositorio contiene el código fuente del backend para StuCode, una plataforma de publicación de artículos diseñada para la comunidad de desarrolladores web. El backend está construido utilizando Node.js y Express, y se integra con PostgreSQL para el almacenamiento de datos relacional.",
  "main": "index.js",
  "scripts": {
    "test": "jest --config ./jest.config.json --verbose --detectOpenHandles",
    "coverage": "jest --config ./jest.config.json --verbose --detectOpenHandles --coverage",
    "prepare": "husky",
    "pre-commit": "eslint . && lint-staged",
    "lint": "eslint .",
    "start:local": "NODE_ENV=local nodemon --inspect=9238 api/index.js",
    "generate": "npx prisma generate",
    "build": "npm run generate",
    "start": "NODE_ENV=production node api/index"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/michaelhr97/api.stucode.git"
  },
  "author": "Michael Hernández",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/michaelhr97/api.stucode/issues"
  },
  "homepage": "https://github.com/michaelhr97/api.stucode#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@faker-js/faker": "^8.4.1",
    "eslint": "^8.57.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "prisma": "^5.13.0",
    "supertest": "^6.3.4"
  },
  "dependencies": {
    "@prisma/client": "^5.13.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "bunyan": "^1.8.15",
    "convict": "^6.2.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.1",
    "express-openapi-validator": "^5.1.6",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "isemail": "^3.2.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "nodemon": "^3.1.0",
    "redoc-express": "^2.1.0"
  }
}
